{
  "name": "sprintcopilot",
  "version": "0.1.0",
  "description": "AI-powered sprint planning and ticket generation tool using LangChain and Next.js",
  "private": true,
  "license": "MIT",
  "keywords": [
    "sprint-planning",
    "ai",
    "ticket-generation",
    "project-management",
    "langchain",
    "nextjs",
    "prisma",
    "typescript"
  ],
  "engines": {
    "node": ">=20.17.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "// Development": "",
    "dev": "next dev --turbopack",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev --turbopack",
    "// Build & Start": "",
    "build": "next build --turbopack",
    "build:analyze": "ANALYZE=true next build --turbopack",
    "build:check": "pnpm run build && pnpm run security:check",
    "start": "next start",
    "// Code Quality": "",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run format:check",
    "// Testing": "",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:api": "tsx scripts/test-api.ts",
    "// Database": "",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "// Security & Validation": "",
    "security:check": "tsx scripts/check-secrets.ts",
    "security:audit": "pnpm audit",
    "// Docker": "",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f app",
    "docker:restart": "docker compose restart app",
    "// CI/CD": "",
    "ci": "pnpm run validate && pnpm run test && pnpm run build",
    "ci:test": "pnpm run type-check && pnpm run lint && pnpm run test:coverage",
    "// Utilities": "",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "rm -rf .next node_modules dist out coverage",
    "update:deps": "pnpm update --interactive --latest",
    "check:deps": "pnpm outdated",
    "// Hooks": "",
    "precommit": "lint-staged",
    "postinstall": "prisma generate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@langchain/core": "^0.3.78",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.6.16",
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.3",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "langchain": "^0.3.36",
    "lucide-react": "^0.545.0",
    "next": "15.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
